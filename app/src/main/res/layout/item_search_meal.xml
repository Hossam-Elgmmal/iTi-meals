<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/plan_meal_card"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:layout_constraintEnd_toEndOf="@id/right_guideline"
    app:layout_constraintStart_toStartOf="@id/left_guideline"
    app:layout_constraintTop_toBottomOf="@id/materialTextView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/meal_image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:contentDescription="@string/meal_image"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/img_error_placeholder" />

        <View
            android:id="@+id/gradient_overlay"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/title_gradient_overlay"
            app:layout_constraintBottom_toBottomOf="@id/meal_image"
            app:layout_constraintEnd_toEndOf="@id/meal_image"
            app:layout_constraintStart_toStartOf="@id/meal_image" />

        <TextView
            android:id="@+id/meal_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.Cuisine.TitleLarge"
            android:textColor="@color/md_theme_onSurface"
            app:layout_constraintBottom_toBottomOf="@id/meal_image"
            app:layout_constraintEnd_toEndOf="@id/meal_image"
            app:layout_constraintStart_toStartOf="@id/meal_image"
            tools:text="Spaghetti Carbonara" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
